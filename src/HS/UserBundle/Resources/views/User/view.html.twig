{% extends 'layout.html.twig' %}

{% block content %}

    {{ parent() }}

    <div class="container well">

        <div class="col-md-9">

            <h2>{{ user.firstName }} {{ user.lastName }}</h2>

            <br>

            <dl>
                <dt>{{ 'Username'|trans }}</dt>
                <dd> {{ user.username }} </dd> &nbsp;
            </dl>

            <dl>
                <dt>{{ 'First name'|trans }}</dt>
                <dd> {{ user.firstName }} </dd> &nbsp;
            </dl>

            <dl>
                <dt>{{ 'Last name'|trans }}</dt>
                <dd> {{ user.lastName }} </dd> &nbsp;
            </dl>

        </div>

        <div class="col-md-3">

            <h3>{{ 'Actions'|trans }}:</h3>

            <p>
                <a href="{{ path('hs_user_edit', {id: user.id}) }}" class="btn btn-lg btn-primary btn-block">
                    <span class="glyphicon glyphicon-edit"></span>
                    {{ 'Edit User'|trans }}
                </a>
            </p>
            <p>
                {{ include('HSUserBundle:User:forms/form.html.twig', {form: delete_form}) }}
            </p>

        </div>

    </div>

{% endblock content %}